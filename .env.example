############################################################
#                      DATABASE CONFIGURATION              #
############################################################

# Database host (e.g., localhost, db.example.com)
DATABASE_HOST=localhost

# Database port (default for PostgreSQL: 5432)
DATABASE_PORT=5432

# Name of the database
DATABASE_NAME=boilerplate

# Database username
DATABASE_USER=postgres

# Database password
DATABASE_PASSWORD=postgres

# Full database connection URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=disable
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/boilerplate?sslmode=disable


############################################################
#                    APPLICATION CONFIGURATION             #
############################################################

# Application name (used for logging, monitoring, etc.)
APP_NAME=boilerplate

# Application environment: development | staging | production
APP_ENV=development

# Application key (generate with: openssl rand -base64 32)
APP_KEY=base64:your-app-key

# Enable debug mode: true | false
APP_DEBUG=true

# Host where the app will run
APP_HOST=localhost

# Port the app will listen on
APP_PORT=8080
